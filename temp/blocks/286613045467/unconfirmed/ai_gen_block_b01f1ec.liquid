{% doc %}
  @prompt
    Poduct recomendations
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-recommendations-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-product-recommendations__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-recommendations__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-product-recommendations__heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-product-recommendations__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: 20px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-product-recommendations__item-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-product-recommendations__card-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .ai-product-recommendations__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin-bottom: 12px;
  }

  .ai-product-recommendations__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-recommendations__card-{{ ai_gen_id }}:hover .ai-product-recommendations__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-recommendations__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-recommendations__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-recommendations__info-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-recommendations__vendor-{{ ai_gen_id }} {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: {{ block.settings.vendor_color }};
    margin-bottom: 4px;
  }

  .ai-product-recommendations__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 8px;
    color: {{ block.settings.title_color }};
    font-weight: 500;
  }

  .ai-product-recommendations__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    display: flex;
    gap: 8px;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .ai-product-recommendations__price-regular-{{ ai_gen_id }} {
    font-weight: 600;
  }

  .ai-product-recommendations__price-compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
  }

  .ai-product-recommendations__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 10px;
    {% if block.settings.badge_position == 'left' %}
      left: 10px;
    {% else %}
      right: 10px;
    {% endif %}
    background-color: {{ block.settings.sale_badge_color }};
    color: {{ block.settings.sale_badge_text_color }};
    padding: 4px 10px;
    border-radius: 40px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-recommendations__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }

  @media screen and (max-width: 989px) {
    .ai-product-recommendations__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-recommendations__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: 16px;
    }

    .ai-product-recommendations__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<product-recommendations-{{ ai_gen_id }}
  class="ai-product-recommendations-{{ ai_gen_id }}"
  data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit={{ block.settings.products_to_show }}"
  {{ block.shopify_attributes }}
>
  {% if recommendations.performed and recommendations.products_count > 0 %}
    <div class="ai-product-recommendations__container-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <div class="ai-product-recommendations__header-{{ ai_gen_id }}">
          <h2 class="ai-product-recommendations__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        </div>
      {% endif %}

      <ul class="ai-product-recommendations__grid-{{ ai_gen_id }}">
        {% for product in recommendations.products %}
          <li class="ai-product-recommendations__item-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-product-recommendations__card-{{ ai_gen_id }}">
              <div class="ai-product-recommendations__image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-recommendations__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  <div class="ai-product-recommendations__placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if product.compare_at_price > product.price and block.settings.show_sale_badge %}
                  <span class="ai-product-recommendations__badge-{{ ai_gen_id }}">
                    {{ block.settings.sale_badge_text }}
                  </span>
                {% endif %}
              </div>

              <div class="ai-product-recommendations__info-{{ ai_gen_id }}">
                {% if block.settings.show_vendor and product.vendor != blank %}
                  <div class="ai-product-recommendations__vendor-{{ ai_gen_id }}">
                    {{ product.vendor }}
                  </div>
                {% endif %}

                <h3 class="ai-product-recommendations__title-{{ ai_gen_id }}">
                  {{ product.title }}
                </h3>

                {% if block.settings.show_price %}
                  <div class="ai-product-recommendations__price-{{ ai_gen_id }}">
                    <span class="ai-product-recommendations__price-regular-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </span>
                    {% if product.compare_at_price > product.price %}
                      <span class="ai-product-recommendations__price-compare-{{ ai_gen_id }}">
                        {{ product.compare_at_price | money }}
                      </span>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}
</product-recommendations-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductRecommendations{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const handleIntersection = (entries, observer) => {
          if (!entries[0].isIntersecting) return;
          observer.unobserve(this);

          fetch(this.dataset.url)
            .then(response => response.text())
            .then(text => {
              const html = document.createElement('div');
              html.innerHTML = text;
              const recommendations = html.querySelector('product-recommendations-{{ ai_gen_id }}');

              if (recommendations && recommendations.innerHTML.trim().length) {
                this.innerHTML = recommendations.innerHTML;
              }
            })
            .catch(e => {
              console.error(e);
            });
        };

        new IntersectionObserver(handleIntersection.bind(this), {rootMargin: '0px 0px 200px 0px'}).observe(this);
      }
    }

    customElements.define('product-recommendations-{{ ai_gen_id }}', ProductRecommendations{{ ai_gen_id }});
  })();
</script>

